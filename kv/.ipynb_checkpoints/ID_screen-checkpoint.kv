#:import utils kivy.utils
# Custom button
<CustButton@Button>:
    font_size: 32

<IDScreen>:

    FloatLayout:
        GridLayout:
            rows: 1
            pos_hint: {"top":1, "center_x":0.5}
            size_hint: 1, 0.1
            canvas:
                Color:
                    rgba: utils.get_color_from_hex("#6200EE")
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                font_size: 70 
                text:"GymNow"
        
        ImageButton:
            source: "Icons/Close.png"
            pos_hint: {"top":1, "x":0.9}
            size_hint: 0.1, 0.1
            allow_stretch: True
            on_release:
                app.change_screen("Home_screen") 

            
            
                
                
        GridLayout:
            rows: 1
            pos_hint: {"top":0.9, "center_x":0.5}
            size_hint: 1, 0.1
            Label:
                font_size: 55
                text:"Card No."
            BoxLayout:
                TextInput:
                    id: ti_cardid
                    font_size: 32
                    multiline: False
                
        GridLayout:
            rows: 1
            pos_hint: {"top":0.8, "center_x":0.5}
            size_hint: 1, 0.1
            Label:
                font_size: 55
                text:"SUTD ID"
            BoxLayout:
                TextInput:
                    id: ti_sutdid
                    font_size: 32
                    multiline: False
                
                
        GridLayout:
            pos_hint: {"top":0.7, "center_x":0.5}
            size_hint: 1,0.5
            rows: 5
            padding: 10
            spacing: 10
    
        # When buttons are pressed update the entry
            BoxLayout:
                spacing: 10
                CustButton:
                    text: "7"
                    on_press: ti_sutdid.text += self.text
                CustButton:
                    text: "8"
                    on_press: ti_sutdid.text += self.text
                CustButton:
                    text: "9"
                    on_press: ti_sutdid.text += self.text
    
    
            BoxLayout:
                spacing: 10
                CustButton:
                    text: "4"
                    on_press: ti_sutdid.text += self.text
                CustButton:
                    text: "5"
                    on_press: ti_sutdid.text += self.text
                CustButton:
                    text: "6"
                    on_press: ti_sutdid.text += self.text
    
                    
            BoxLayout:
                spacing: 10
                CustButton:
                    text: "1"
                    on_press: ti_sutdid.text += self.text
                CustButton:
                    text: "2"
                    on_press: ti_sutdid.text += self.text
                CustButton:
                    text: "3"
                    on_press: ti_sutdid.text += self.text
                    
            BoxLayout:
                spacing: 10
                CustButton:
                    text: "AC"
                    on_press: 
                        ti_sutdid.text = ""
                        ti_cardid.text = ""
                CustButton:
                    text: "0"
                    on_press: ti_sutdid.text += self.text
                CustButton:
                    text: "Next"
                    on_press: root.proceed_button()
                    
        Button:
            pos_hint:{"center_x": 0.5, "bottom":1}
            size_hint: 0.3,0.2
            background_normal: ''
            background_color: rgba("#6200EE")
            colour:0,0,0,1
            halign: "center"
            font_size: 37
            text:"Autofill"
            on_release: root.autofill_button()
                
            
        
