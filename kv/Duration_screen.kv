
<DurationScreen>:
    FloatLayout:
        GridLayout:
            rows: 1
            pos_hint: {"top":1, "center_x":0.5}
            size_hint: 1, 0.1
            canvas:
                Color:
                    rgba: utils.get_color_from_hex("#6200EE")
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                font_size: 70 
                text:"GymNow"
        
        ImageButton:
            source: "Icons/Home.png"
            pos_hint: {"top":1, "x":0.9}
            size_hint: 0.1, 0.1
            allow_stretch: True
            on_release:
                app.change_screen("Home_screen")
                
        GridLayout:
            rows: 1
            pos_hint: {"top":0.9, "center_x":0.5}
            size_hint: 1, 0.1
            Label:
                font_size: 60
                text:"Enter Duration(/mins):"
                
        GridLayout:
            rows: 1
            pos_hint: {"top":0.8, "center_x":0.5}
            size_hint: 1, 0.1
            TextInput:
                id: ti_duration
                font_size: 32
                multiline: False
                
                
        GridLayout:
            pos_hint: {"top":0.7, "center_x":0.5}
            size_hint: 1,0.5
            rows: 5
            padding: 10
            spacing: 10
    
        # When buttons are pressed update the entry
            BoxLayout:
                spacing: 10
                CustButton:
                    text: "7"
                    on_press: ti_duration.text += self.text
                CustButton:
                    text: "8"
                    on_press: ti_duration.text += self.text
                CustButton:
                    text: "9"
                    on_press: ti_duration.text += self.text
    
    
            BoxLayout:
                spacing: 10
                CustButton:
                    text: "4"
                    on_press: ti_duration.text += self.text
                CustButton:
                    text: "5"
                    on_press: ti_duration.text += self.text
                CustButton:
                    text: "6"
                    on_press: ti_duration.text += self.text
    
                    
            BoxLayout:
                spacing: 10
                CustButton:
                    text: "1"
                    on_press: ti_duration.text += self.text
                CustButton:
                    text: "2"
                    on_press: ti_duration.text += self.text
                CustButton:
                    text: "3"
                    on_press: ti_duration.text += self.text
                    
            BoxLayout:
                spacing: 10
                CustButton:
                    text: "AC"
                    on_press: ti_duration.text = ""
                CustButton:
                    text: "0"
                    on_press: ti_duration.text += self.text
                CustButton:
                    text: "Enter"
                    on_release: root.book_button()
                    
